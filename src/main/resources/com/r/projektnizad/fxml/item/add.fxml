<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<?import atlantafx.base.controls.MaskTextField?>

<VBox alignment="CENTER" prefHeight="890.0" prefWidth="1280.0" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/21.0.1">
    <VBox alignment="CENTER_LEFT" maxWidth="300" spacing="20.0" VBox.vgrow="ALWAYS">
        <Label fx:id="titleLabel" styleClass="title-2" text="Dodaj artikl"/>
        <VBox>
            <Label text="Ime artikla"/>
            <TextField fx:id="nameTextField"/>
        </VBox>
        <VBox>
            <Label text="Opis artikla"/>
            <TextField fx:id="descriptionTextField"/>
        </VBox>
        <VBox>
            <Label text="Kategorija"/>
            <ComboBox fx:id="categoryComboBox"/>
        </VBox>
        <VBox>
            <Label text="Cijena"/>
            <TextField fx:id="priceTextField"/>
        </VBox>
        <VBox>
            <Label text="Količina"/>
            <TextField fx:id="stockTextField"/>
        </VBox>
        <VBox>
            <Label text="Količina obnova zalihe"/>
            <TextField fx:id="defaultStockIncrementTextField"/>
        </VBox>
        <VBox>
            <Label text="Vrsta artikla"/>
            <ComboBox fx:id="itemTypeComboBox"/>
        </VBox>
        <VBox fx:id="preparationField">
            <Label text="Vijeme pripreme"/>
            <MaskTextField fx:id="preparationTimeTextField"/>
        </VBox>
    </VBox>
</VBox>
