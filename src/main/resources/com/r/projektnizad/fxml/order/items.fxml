<?xml version="1.0" encoding="UTF-8"?>

<?import com.r.projektnizad.util.CustomTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.DatePicker?>

<VBox prefHeight="890.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <fx:include source="../menubar.fxml"/>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox.margin>
            <Insets left="16.0" right="16.0" top="16.0"/>
        </VBox.margin>
        <HBox spacing="16.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
            <padding>
                <Insets bottom="16.0" top="16.0"/>
            </padding>
            <Label styleClass="title-2" fx:id="titleLabel" text="Narudžbe"/>
            <Label text="" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addItemToOrderButton" text="Dodaj artikal u narudžbu"/>
        </HBox>
        <CustomTableView fx:id="itemOnOrderTableView" styleClass="dense" GridPane.rowIndex="3">
            <columns>
                <TableColumn fx:id="itemNameTableColumn" prefWidth="75.0" text="Artikl"/>
                <TableColumn fx:id="statusTableColumn" prefWidth="75.0" text="Status"/>
                <TableColumn fx:id="priceTableColumn" prefWidth="75.0" text="Cijena"/>
                
            </columns>
        </CustomTableView>
    </GridPane>
</VBox>
