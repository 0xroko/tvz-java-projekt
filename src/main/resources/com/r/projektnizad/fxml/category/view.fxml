<?xml version="1.0" encoding="UTF-8"?>

<?import com.r.projektnizad.util.CustomTableView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER_LEFT" prefHeight="460.0" prefWidth="609.0" styleClass="container"
      xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.r.projektnizad.controllers.category.View">
    <fx:include source="../menubar.fxml"/>
    <VBox alignment="CENTER_LEFT" prefHeight="405.0" prefWidth="500.0" spacing="20.0" VBox.vgrow="ALWAYS"
          styleClass="app-content">
        <Label text="Kategorije" styleClass="title"/>
        <Button onAction="#openAddCategory" text="Dodaj kategoriju"/>
        <CustomTableView fx:id="categoryTableView" prefHeight="435.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="idTableColumn" prefWidth="75.0" text="ID"/>
                <TableColumn fx:id="nameTableColumn" prefWidth="106.0" text="Ime"/>
                <TableColumn fx:id="descriptionTableColumn" minWidth="0.0" prefWidth="316.0" text="Opis"/>
            </columns>
        </CustomTableView>
    </VBox>
</VBox>
